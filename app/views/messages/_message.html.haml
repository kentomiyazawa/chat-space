.chat-main__list__message
  .chat-main__list__message__info
    .chat-main__list__message__info__name 
      = message.user.name
    .chat-main__list__message__info__time
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .chat-main__list__message__text
    - if message.content.present?
      %p.chat-main__list__message__text__content
        = message.content
    = image_tag message.image.url, class: 'chat-main__list__message__image' if message.image.present?